<div id="vue-userdetail"
     data-user-id="<%= @user.id %>"
     data-current-user-id="<%= @current_user&.id %>"
     data-initial-user-data="<%= raw json_escape(@user.profile_data_for_json.to_json) %>">
  <!-- Vue.jsが読み込まれない場合のフォールバック -->
  <div class="fallback-content" style="padding: 2rem; text-align: center; background: #f9f9f9;">
    <h1>ユーザー詳細</h1>
    <p>ユーザー名: <%= @user.name %></p>
    <p>投稿数: <%= @user.posts_count %></p>
    <p>グループ数: <%= @user.groups_count %></p>
  </div>
</div>