<h2>新しいTo doを加える</h2>
<%= form_with url: "/tasks/create", local: true do |f| %>
  <p> <%= f.text_field :title %> </p> 
  <h3>期限</h3>
  <%= f.datetime_local_field :due_date %>
  <h3>優先度</h3>
  <div class = "btn">
    <p> <%= f.radio_button :priority,2 %>
        <%= f.label :priority, "優先度「高」" %></p>
    <p> <%= f.radio_button :priority,1 %>
        <%= f.label :priority, "優先度「中」" %></p>
    <p> <%= f.radio_button :priority,0 %>
        <%= f.label :priority, "優先度「低」" %></p>
  </div>
  <h3>カテゴリの入力(任意)</h3>
  <%= f.text_field :category %>
  <p> <%= f.submit "CREATE" %></p>  
<% end %>