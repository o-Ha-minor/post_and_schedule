<div 
  id="vue-tasklist"
  data-is-logged-in="<%= @current_user.present? %>"
  data-current-user-id="<%= @current_user&.id %>"
  data-current-user-name="<%= @current_user&.name %>"
  data-groups="<%= (@current_user&.groups || []).to_json %>"
  data-initial-tasks="<%= @tasks&.to_json || '[]' %>"
  data-initial-completed-tasks="<%= @completed_tasks&.to_json || '[]' %>"
></div>